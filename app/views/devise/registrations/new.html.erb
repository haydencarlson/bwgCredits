<div class="wrapper">
	<div class="container" style="margin-top: 140px;">
		<h1 class="sessionsTitle" style="color:white;">Create a new account</h1>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <%= devise_error_messages_for(resource) %>
      <div class="field">
        <%= f.email_field :email, placeholder: "Email", autofocus: true %>
      </div>

      <div class="field">
        <%= f.password_field :password, placeholder: "Password", autocomplete: "off" %>
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, placeholder: "Password confirmation", autocomplete: "off" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", style: 'background-color:white;color:#19a8bf;' %>
      </div>

      <%= render "devise/shared/links" %>

    <% end %>
	</div>

	<ul class="bg-bubbles">
		<li></li>
		<li></li>
		<li></li>
		<li></li>
		<li></li>
		<li></li>
		<li></li>
		<li></li>
		<li></li>
		<li></li>
	</ul>
</div>
